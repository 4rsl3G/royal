<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin - <%= settings.site_name %></title>

  <meta name="csrf-token" content="<%= csrfToken %>" />

  <%
    const ASSET_V = (settings && settings.assets_version) ? String(settings.assets_version) : '1';
  %>

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.13.8/css/jquery.dataTables.min.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>

  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Admin CSS -->
  <link rel="stylesheet" href="/public/admin.css?v=<%= ASSET_V %>" />
</head>

<body class="font-[Inter] bg-slate-50 text-slate-900">

  <!-- Topbar -->
  <header class="sticky top-0 z-40 bg-white/75 backdrop-blur border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between gap-3">
      <div class="flex items-center gap-3 min-w-0">
        <div class="w-11 h-11 rounded-2xl bg-slate-900 text-white flex items-center justify-center font-extrabold shadow-sm">
          RD
        </div>
        <div class="min-w-0">
          <div class="font-extrabold leading-tight truncate">Admin Panel</div>
          <div class="text-xs text-slate-500 truncate">
            Login as <b class="text-slate-700"><%= admin.username %></b>
            <span class="text-slate-400">•</span>
            <span class="font-semibold"><%= admin.role %></span>
          </div>
        </div>
      </div>

      <nav class="hidden md:flex items-center gap-2 flex-wrap">
        <a href="<%= adminBasePath %>#/dashboard" class="navbtn" data-nav="dashboard"><i class="ri-dashboard-2-line"></i><span>Dashboard</span></a>
        <a href="<%= adminBasePath %>#/orders" class="navbtn" data-nav="orders"><i class="ri-file-list-3-line"></i><span>Orders</span></a>
        <a href="<%= adminBasePath %>#/products" class="navbtn" data-nav="products"><i class="ri-store-2-line"></i><span>Products</span></a>
        <a href="<%= adminBasePath %>#/settings" class="navbtn" data-nav="settings"><i class="ri-settings-3-line"></i><span>Settings</span></a>
        <a href="<%= adminBasePath %>#/whatsapp" class="navbtn" data-nav="whatsapp"><i class="ri-whatsapp-line"></i><span>WhatsApp</span></a>
        <a href="<%= adminBasePath %>/logout" class="navbtn navbtn-danger"><i class="ri-logout-box-r-line"></i><span>Logout</span></a>
      </nav>

      <div class="md:hidden flex items-center gap-2">
        <a href="<%= adminBasePath %>#/dashboard" class="iconbtn" aria-label="Dashboard">
          <i class="ri-dashboard-2-line"></i>
        </a>
        <button id="btn-admin-menu" class="iconbtn" aria-label="Menu">
          <i class="ri-menu-3-line"></i>
        </button>
      </div>
    </div>
  </header>

  <!-- Mobile Drawer -->
  <div id="admin-drawer" class="hidden fixed inset-0 z-50">
    <div class="absolute inset-0 bg-black/35 backdrop-blur-sm" id="admin-drawer-backdrop"></div>

    <div class="absolute top-0 right-0 h-full w-[86%] max-w-sm bg-white shadow-2xl border-l border-slate-200">
      <div class="p-4 border-b border-slate-200 flex items-center justify-between gap-3">
        <div class="flex items-center gap-3 min-w-0">
          <div class="w-10 h-10 rounded-2xl bg-slate-900 text-white flex items-center justify-center font-extrabold">
            RD
          </div>
          <div class="min-w-0">
            <div class="font-extrabold leading-tight truncate">Admin Panel</div>
            <div class="text-xs text-slate-500 truncate">
              <%= admin.username %> • <%= admin.role %>
            </div>
          </div>
        </div>

        <button id="btn-admin-close" class="iconbtn" aria-label="Close">
          <i class="ri-close-line"></i>
        </button>
      </div>

      <div class="p-4">
        <div class="grid grid-cols-2 gap-2">
          <a href="<%= adminBasePath %>#/dashboard" class="drawerbtn" data-nav="dashboard">
            <i class="ri-dashboard-2-line"></i> Dashboard
          </a>
          <a href="<%= adminBasePath %>#/orders" class="drawerbtn" data-nav="orders">
            <i class="ri-file-list-3-line"></i> Orders
          </a>
          <a href="<%= adminBasePath %>#/products" class="drawerbtn" data-nav="products">
            <i class="ri-store-2-line"></i> Products
          </a>
          <a href="<%= adminBasePath %>#/settings" class="drawerbtn" data-nav="settings">
            <i class="ri-settings-3-line"></i> Settings
          </a>
          <a href="<%= adminBasePath %>#/whatsapp" class="drawerbtn" data-nav="whatsapp">
            <i class="ri-whatsapp-line"></i> WhatsApp
          </a>
          <a href="<%= adminBasePath %>/logout" class="drawerbtn drawerbtn-danger">
            <i class="ri-logout-box-r-line"></i> Logout
          </a>
        </div>

        <div class="mt-4 text-xs text-slate-500 leading-relaxed">
          Tip: gunakan menu <b>WhatsApp</b> untuk pairing (QR / pairing code), lalu aktifkan template notifikasi di <b>Settings</b>.
        </div>
      </div>
    </div>
  </div>

  <main class="max-w-7xl mx-auto px-4 py-6">
    <div id="admin-content"></div>
  </main>

  <div id="overlay" class="hidden fixed inset-0 z-50 bg-black/30 backdrop-blur-sm">
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="bg-white rounded-2xl px-5 py-4 shadow-lg flex items-center gap-3">
        <div class="w-5 h-5 rounded-full border-2 border-slate-300 border-t-slate-900 animate-spin"></div>
        <div class="text-sm font-semibold">Memproses…</div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <!-- DataTables (CDNJS / Cloudflare) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.13.8/jquery.dataTables.min.js"></script>

  <script>
    window.__CSRF_TOKEN = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    window.__ADMIN_BASE = "<%= adminBasePath %>";
    window.__ASSET_V = "<%= ASSET_V %>";

    // Mobile drawer
    (function(){
      function openDrawer(){ $('#admin-drawer').removeClass('hidden'); }
      function closeDrawer(){ $('#admin-drawer').addClass('hidden'); }

      $(document).on('click', '#btn-admin-menu', openDrawer);
      $(document).on('click', '#btn-admin-close, #admin-drawer-backdrop', closeDrawer);

      function setActive(){
        const hash = location.hash || '#/dashboard';
        const key =
          hash.startsWith('#/orders') ? 'orders' :
          hash.startsWith('#/products') ? 'products' :
          hash.startsWith('#/settings') ? 'settings' :
          hash.startsWith('#/whatsapp') ? 'whatsapp' :
          'dashboard';

        $('[data-nav]').removeClass('is-active');
        $('[data-nav="' + key + '"]').addClass('is-active');
      }
      window.addEventListener('hashchange', setActive);
      setActive();
    })();

    // Per-route script loader (ONLY load order.js on orders page)
    (function(){
      function loadScriptOnce(id, src){
        if (document.getElementById(id)) return Promise.resolve(true);
        return new Promise((resolve, reject) => {
          const s = document.createElement('script');
          s.id = id;
          s.src = src;
          s.async = true;
          s.onload = () => resolve(true);
          s.onerror = () => reject(new Error('Failed to load: ' + src));
          document.body.appendChild(s);
        });
      }

      async function ensureRouteScripts(){
        const hash = location.hash || '#/dashboard';
        if (hash.startsWith('#/orders')) {
          try{
            await loadScriptOnce('rd-orders-js', '/public/order.js?v=' + encodeURIComponent(window.__ASSET_V || '1'));
          } catch(e){
            console.error(e);
            toastr.error('Gagal memuat order.js');
          }
        }
      }

      window.addEventListener('hashchange', ensureRouteScripts);
      // first load
      ensureRouteScripts();
    })();
  </script>

  <!-- Admin JS (router) -->
  <script src="/public/admin.js?v=<%= ASSET_V %>"></script>
</body>
</html>
