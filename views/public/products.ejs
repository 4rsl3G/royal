<div class="flex items-end justify-between gap-3 fade-up">
  <div>
    <h2 class="text-2xl font-extrabold">Produk</h2>
    <p class="text-slate-500 text-sm">Pilih paket chip Royal Dreams sesuai kebutuhan.</p>
  </div>
  <a href="/#\/checkout" class="btn-primary"><i class="ri-shopping-cart-2-line"></i> Checkout</a>
</div>

<div class="mt-5 grid sm:grid-cols-2 lg:grid-cols-3 gap-3">
  <% products.forEach(p => { %>
    <div class="bg-white border rounded-2xl p-4 shadow-sm hover:shadow transition fade-up">
      <div class="flex items-center gap-3">
        <div class="w-14 h-14 rounded-xl bg-slate-100 overflow-hidden flex items-center justify-center">
          <% if (p.image) { %>
            <img src="<%= p.image %>" class="w-full h-full object-cover" />
          <% } else { %>
            <i class="ri-gamepad-line text-slate-500 text-2xl"></i>
          <% } %>
        </div>
        <div class="flex-1">
          <div class="font-bold"><%= p.name %></div>
          <div class="text-xs text-slate-500"><%= p.sku %></div>
        </div>
      </div>

      <div class="mt-3 flex items-center justify-between">
        <div>
          <div class="text-xs text-slate-500">Harga</div>
          <div class="font-extrabold text-lg">
            Rp <%= (p.price_type==='fixed' ? p.price : p.price_per_item) %>
            <span class="text-xs text-slate-500 font-semibold"><%= p.price_type==='fixed' ? '' : '/item' %></span>
          </div>
        </div>
        <button class="btn-ghost js-quickbuy" data-id="<%= p.id %>">
          <i class="ri-flashlight-line"></i> Quick
        </button>
      </div>
    </div>
  <% }) %>
</div>

<script>
  // quick select product -> checkout
  $('.js-quickbuy').on('click', function() {
    const id = $(this).data('id');
    window.localStorage.setItem('rd_selected_product', String(id));
    window.location.hash = '#/checkout';
  });
</script>
